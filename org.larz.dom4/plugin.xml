<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.larz.dom4.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Dom4Editor Perspective"
            class="org.larz.dom4.Perspective"
            id="org.larz.dom4.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.larz.dom4.application"
            name="Dominions 4 Mod Editor">
         <property
               name="windowImages"
               value="icons/alt_window_16.png,icons/alt_window_32.png,icons/alt_window_48.png,icons/alt_window_64.png,icons/alt_window_128.png">
         </property>
         <property
               name="appName"
               value="Dominions 4 Mod Editor">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.png">
         </property>
         <property
               name="aboutText"
               value="This is the Dominions 4 Mod File Editor.&#x0A;Project home: http://code.google.com/p/dom4editor/&#x0A;License: http://www.gnu.org/licenses/gpl.txt&#x0A;&#x0A;Release 1.0 - December 5, 2013.">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="20,256,445,18">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="cssTheme"
               value="net.jeeeyul.eclipse.themes.chrome">
         </property>
         <property
               name="clearPersistedState"
               value="true">
         </property>
      </product>
   </extension>
   <extension point="org.eclipse.ui.editors">
      <editor
            class="org.larz.dom4.editor.DmEditor"
            contributorClass="org.larz.dom4.editor.DmTextEditorActionContributor"
            default="true"
            extensions="dm"
            icon="icons/alt_window_16.png"
            id="org.larz.dom4.editor.DmEditor"
            name="Dm Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.larz.dom4.ActionWiper">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.larz.dom4.Open"
            id="org.larz.dom4.Open"
            name="Open">
      </command>
      <command
            defaultHandler="org.larz.dom4.New"
            id="org.larz.dom4.New"
            name="New">
      </command>
      <command
            defaultHandler="org.larz.dom4.FixIds"
            id="org.larz.dom4.FixIds"
            name="Fix ID Numbers">
      </command>
      <command
            defaultHandler="org.larz.dom4.ShowProblems"
            id="org.larz.dom4.ShowProblems"
            name="Show Problems">
      </command>
      <command
            defaultHandler="org.larz.dom4.GenerateReport"
            id="org.larz.dom4.GenerateReport"
            name="Generate Report">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File"
               mnemonic="F">
            <command
                  commandId="org.larz.dom4.New"
                  icon="IMG_TOOL_NEW_WIZARD"
                  label="New Mod..."
                  style="push">
            </command>
            <command
                  commandId="org.larz.dom4.Open"
                  icon="IMG_OBJ_FOLDER"
                  label="Open Mod..."
                  style="push">
            </command>
            <separator
                  name="org.larz.dom4.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.closeAll"
                  style="push">
            </command>
            <separator
                  name="org.larz.dom4.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  style="push">
            </command>
            <separator
                  name="org.larz.dom4.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Edit"
               mnemonic="E">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <separator
                  name="org.larz.dom4.separator5"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.cut"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  style="push">
            </command>
            <separator
                  name="org.larz.dom4.separator6"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.findReplace"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help"
               mnemonic="H">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About Dominions 4 Mod Editor"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.larz.dom4.toolbar1">
            <command
                  commandId="org.larz.dom4.New"
                  icon="IMG_TOOL_NEW_WIZARD"
                  style="push"
                  tooltip="New Mod...">
            </command>
            <command
                  commandId="org.larz.dom4.Open"
                  icon="IMG_OBJ_FOLDER"
                  style="push"
                  tooltip="Open Mod...">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.larz.dom4.toolbar2">
            <command
                  commandId="org.larz.dom4.FixIds"
                  icon="icons/fix.png"
                  label="Fix ID Numbers"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeEditorId">
                     <equals
                           value="org.larz.dom4.editor.DmEditor">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.larz.dom4.ShowProblems"
                  icon="icons/problems_view.gif"
                  label="Show Problems"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeEditorId">
                     <equals
                           value="org.larz.dom4.editor.DmEditor">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <!--command
                  commandId="org.larz.dom4.GenerateReport"
                  icon="icons/pdf.gif"
                  label="Generate Report"
                  style="push">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="activeEditorId">
                     <equals
                           value="org.larz.dom4.editor.DmEditor">
                     </equals>
                  </with>
               </visibleWhen>
            </command-->
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
